<body>
    <nav class="navbar navbar-dark bg-dark">
        <h2 class="text-white offset-md-5">Good health</h2>
    </nav>
    <br/>   
    <div class="container-fluid">
        <div class="row">
            <div class="offset-md-4 col-md-4" id="form">
            <form action="/otpVerification" method="POST">
                <h4>OTP-verification</h4>
                <div class="form-group">
                    <label for="exampleInputPhone">OTP</label>
                    <input type="text" class="form-control"
                        id="exampleInputPhone" name="otp"
                        aria-describedby="phoneHelp"
                        placeholder="Enter OTP">
                    <small id="phoneHelp"
                        class="form-text text-muted"></small>
                </div>

                <button type="submit" class="btn btn-secondary">
                    Verify
                </button>

                <a href="/phoneLogin">Back to phone login</a>
            </form>
        </div>
    
        </div>
        
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
